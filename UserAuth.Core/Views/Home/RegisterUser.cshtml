@model UserAuth.Repository.ViewModels.RegisterUserViewModel
<div class="LoginContent">
    <h1 class="display-4 mb-4">Register New USer</h1>
    <div class="w-100">
        <form asp-action="RegisterUser" asp-controller="Home" method="post" class="d-flex flex-column">

            <div class=" has-validation my-2 mb-4 w-100">
                <input type="text" class="form-control" placeholder="Email" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger float-start"></span>
            </div>


            <div class=" has-validation my-2 mb-4 w-100">
                <input type="text" class="form-control" placeholder="Username" asp-for="UserName">
                <span asp-validation-for="UserName" class="text-danger float-start"></span>
            </div>
            <div class="d-flex gap-4">
                <div class=" has-validation my-2 mb-4 w-100">
                    <input type="text" class="form-control" placeholder="First Name" asp-for="FirstName">
                    <span asp-validation-for="FirstName" class="text-danger float-start"></span>
                </div>
                <div class=" has-validation my-2 mb-4 w-100">
                    <input type="text" class="form-control" placeholder="Last Name" asp-for="LastName">
                    <span asp-validation-for="LastName" class="text-danger float-start"></span>
                </div>
            </div>


            <div class=" has-validation my-2 mb-4 w-100">
                <input type="text" class="form-control" placeholder="Phone Number" asp-for="PhoneNumber">
                <span asp-validation-for="PhoneNumber" class="text-danger float-start"></span>
            </div>


            <div class="d-flex gap-4">
                <div class=" has-validation my-2 mb-4 w-100">
                    <input type="Date" class="form-control" placeholder="Date of birth" asp-for="DateOfBirth">
                    <span asp-validation-for="DateOfBirth" class="text-danger float-start"></span>
                </div>
                <div class="has-validation my-2 mb-4 w-100">
                    <select asp-for="Role" class="form-control">
                        <option value="">Select Role</option>
                        <option value="2">User</option>
                        <option value="1">Admin</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger float-start"></span>
                </div>
            </div>


            <div class="d-flex gap-4">
                <div class="position-relative password-section my-2 mb-4">
                    <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword2"
                        placeholder="New Password*">
                    <div class="eye z-10">
                        <i class="bi bi-eye openeye1 eye inactive"></i>
                        <i class="bi bi-eye-slash closeeye1 eye active"></i>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="position-relative password-section my-2 mb-4">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="exampleInputPassword3"
                        placeholder="Confirm New Password*">
                    <div class="eye z-10">
                        <i class="bi bi-eye openeye2 eye inactive"></i>
                        <i class="bi bi-eye-slash closeeye2 eye active"></i>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="">
                <button type="submit" class="w-100 btn btn-color text-white rounded-3">Sign up</button>

            </div>
        </form>
    </div>

    <a class="" asp-action="RegisterUser" asp-controller="Home"></a>
</div>


@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        window.successMessage = '@TempData["SuccessMessage"]';
        window.errorMessage = '@TempData["ErrorMessage"]';
    </script>
    <script src="~/js/toastr_script.js"></script>
}